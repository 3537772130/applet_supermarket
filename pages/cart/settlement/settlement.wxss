/* pages/cart/settlement/settlement.wxss */
@import "/pages/style.wxss";

.settlement-heard {
  margin-bottom: 10px;
  padding: 20px 20px 10px 20px;
  background-color: #fff;
  height: 70px;
}

.settlement-heard > .heard-address {
  float: left;
  display: inline-table;
  width: 85%;
  height: 70px;
}

.settlement-heard > .heard-address > .h-first {
  height: 15px;
  line-height: 15px;
  font-size: 10px;
}

.settlement-heard > .heard-address > .h-first > .f-def {
  float: left;
  display: inline-table;
  height: 12px;
  line-height: 12px;
  padding: 0px 5px;
  color: #fff;
  background-color: #d81e06;
  text-align: center;
  border-radius: 3px;
  margin-right: 5px;
}

.settlement-heard > .heard-address > .h-first > .f-label {
  float: left;
  display: inline-table;
  height: 12px;
  line-height: 12px;
  padding: 0px 5px;
  color: #fff;
  background-color: #1296db;
  text-align: center;
  border-radius: 3px;
  margin-right: 5px;
}

.settlement-heard > .heard-address > .h-first > .f-region {
  float: left;
  width: 70%;
  font-size: 12px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  white-space: normal !important;
}

.settlement-heard > .heard-address > .h-two {
  height: 30px;
  line-height: 30px;
  font-size: 16px;
  font-weight: bold;
}

.settlement-heard > .heard-address > .h-three {
  display: inline-table;
  font-size: 12px;
  height: 20px;
  line-height: 20px;
}

.settlement-heard > .heard-address > .h-three > .t-name {
  display: inline-table;
  margin-right: 5px;
}

.settlement-heard > .heard-address > .h-three > .t-name > text {
  font-size: 12px;
}

.settlement-heard > .heard-address > .h-three > .t-mobile {
  display: inline-table;
}

.settlement-heard > .heard-icon {
  float: left;
  display: inline-table;
  width: 15%;
  height: 70px;
  text-align: right;
}

.settlement-heard > .heard-icon > i-icon {
  position: relative;
  top: 15px;
}

/**
* 添加收货地址
*/

.add-address {
  height: 30px;
  line-height: 30px;
  padding: 10px 20px;
  background-color: #fff;
  margin-bottom: 10px;
}

.add-address > .add-title {
  display: inline-table;
  width: 50%;
  font-size: 14px;
  color: #cdcdcd;
}

.add-address > .add-icon {
  display: inline-table;
  width: 50%;
  text-align: right;
}

/**
* 支付方式
*/

.paly-type {
  height: 30px;
  padding: 10px 20px;
  margin-bottom: 10px;
  border-radius: 10px;
  background-color: #fff;
}

.paly-type > .t-title {
  display: inline-table;
  width: 50%;
  height: 30px;
  line-height: 30px;
  text-align: left;
  font-size: 12px;
}

.paly-type > .t-name {
  display: inline-table;
  width: 50%;
  text-align: right;
  height: 30px;
  line-height: 30px;
  font-size: 12px;
}

.paly-type > .t-name >text {
  display: inline-table;
  margin-right: 10px;
}

/**
* 商品
*/

.goods-list {
  padding: 20px;
  background-color: #fff;
  border-radius: 10px;
  margin-bottom: 10px;
}

.goods-list > .goods-item {
  text-align: center;
}

.goods-list > .goods-item > .item-img {
  float: left;
  display: inline-table;
  width: 40%;
  text-align: center;
  /* margin-right: 3%; */
}

.goods-list > .goods-item > .item-img > image {
  width: 100px;
  height: 100px;
  border: 1px #cdcdcd solid;
  border-radius: 5px;
}

.goods-list > .goods-item > .item-info {
  display: inline-table;
  width: 60%;
}

.goods-list > .goods-item > .item-info > .info-name {
  text-align: left;
  font-size: 12px;
  height: 32px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  white-space: normal !important;
}

.goods-list > .goods-item > .item-info > .info-specs {
  height: 20px;
  line-height: 20px;
  font-size: 12px;
  color: #cdcdcd;
  text-indent: 00px;
  text-align: left;
}

.goods-list > .goods-item > .item-info > .info-data {
  height: 50px;
}

.goods-list > .goods-item > .item-info > .info-data > .data-price {
  display: inline-table;
  width: 40%;
  text-align: center;
  font-size: 14px;
  color: #d81e06;
}

.goods-list > .goods-item > .item-info > .info-data > .data-num {
  display: inline-table;
  width: 60%;
  height: 50px;
  line-height: 50px;
  font-size: 12px;
  text-align: center;
}

.goods-list > .goods-remark {
  font-size: 12px;
  color: #cdcdcd;
  padding-left: 20px;
}

/**
* 参数
*/

.order-data {
  padding: 10px 20px;
  margin-bottom: 80px;
  border-radius: 10px;
  background-color: #fff;
}

.order-data > .data-item {
  height: 30px;
}

.order-data > .data-item > .item-title {
  display: inline-table;
  width: 30%;
  height: 30px;
  line-height: 30px;
  text-align: left;
  font-size: 12px;
}

.order-data > .data-item > .item-name {
  display: inline-table;
  width: 70%;
  text-align: right;
  height: 30px;
  line-height: 30px;
  font-size: 12px;
}

.order-data > .data-item > .item-name > text {
  display: inline-table;
  margin-right: 10px;
  font-size: 12px;
  overflow: hidden;
  text-overflow: ellipsis;
  /* display: -webkit-box; */
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  white-space: normal !important;
}

.order-data > .data-item > .item-name > .coupon-name {
  display: inline-table;
  width: 50%;
}

.order-data > .data-item > .item-name > .coupon-name > view {
  text-align: right;
  margin-right: 10px;
  color: #cdcdcd;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  white-space: normal !important;
}

/**
* 底部菜单
*/

.but-menu {
  width: 100%;
  height: 50px;
  line-height: 50px;
  padding: 0px 20px;
  background-color: #fff;
  border-top: 1px #e6e6e6 solid;
  position: fixed;
  bottom: 0px;
  z-index: 99;
}

.but-menu > .order-total-price {
  display: inline-table;
  width: 50%;
  font-size: 14px;
  color: #d81e06;
}

.but-menu > .order-total-price > text {
  font-size: 18px;
  font-weight: bold;
}

.but-menu > .order-sub {
  display: inline-table;
  width: 50%;
  text-align: right;
}

.but-menu > .order-sub > button {
  width: 100px;
  height: 30px;
  line-height: 30px;
  font-size: 14px;
  color: #fff;
}
