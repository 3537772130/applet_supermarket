/* pages/my/set/mobile/mobile.wxss */
@import "/pages/style.wxss";

page{
  background-color: #FFFFFF;
}

.bind-img{
  width: 100%;
  height: 220px;
  text-align: center;
}

.bind-img > image{
  width: 128px;
  height: 128px;
  margin-top: 50px;
}

.bind-mobile{
  height: 30px;
  line-height: 30px;
  font-size: 14px;
  text-align: center;
  color: #2c2c2c;
}

.bind-but{
  text-align: center;
  margin-top: 30px;
}

.bind-but > button{
  width: 60%;
  height: 30px;
  line-height: 30px;
  font-size: 14px;
  letter-spacing: 3px;
  color: #FFFFFF;
}

.cozy-tip{
  margin: 20px 30px 0px 30px;
  padding: 20px 10px;
  font-size: 12px;
  color: #bfbfbf;
  background-color: #e6e6e6;
  border-radius: 5px;
}