/* pages/my/my.wxss */
@import "/pages/weui.wxss";
@import "/pages/style.wxss";

.page {
  font-family: '幼圆';
}

.my-heard {
  background-color: #fff;
}

.heard-content {
  height: 150px;
  border-radius: 0px 0px 30% 30%;
}

.heard-content > .heard-img {
  float: left;
  display: inline-table;
  width: 150px;
  height: 150px;
  text-align: center;
}

.heard-content > .heard-img > image {
  width: 80px;
  height: 80px;
  border-radius: 45px;
  /* border: 5px solid hsla(0,0%,90%,.3); */
  border: 5px solid transparent;
  border-color: transparent;
  border-color: rgba(255, 255, 255, 0.7);
  margin-top: 30px;
}

.heard-content > .heard-info {
  float: left;
  display: inline-table;
  width: 160px;
  height: 150px;
  line-height: 150px;
}

.heard-content > .heard-info > .info-name {
  height: 30px;
  line-height: 30px;
  font-size: 14px;
  color: #fff;
  margin-top: 45px;
}

.heard-content > .heard-info > .info-name > image {
  width: 12px;
  height: 12px;
  margin-left: 10px;
  position: relative;
  top: 2px;
}

.heard-content > .heard-info > .info-mobile {
  height: 30px;
  line-height: 30px;
  font-size: 14px;
  color: #fff;
  letter-spacing: 2rpx;
}

.heard-content > .heard-info > .info-text {
  height: 30px;
  line-height: 30px;
  font-size: 14px;
  color: #fff;
}

.heard-set {
  width: 22px;
  height: 22px;
  position: absolute;
  top: 10px;
  right: 20px;
}

.heard-notice {
  height: 40px;
  padding: 5px 0px;
}

.my-account {
  width: 100%;
  height: 100px;
  background-color: #fff;
  margin-top: 3px;
  margin-bottom: 3px;
}

.my-account > .account-element {
  display: inline-table;
  width: 33.3%;
}

.my-account > .account-element > .element-img {
  text-align: center;
}

.my-account > .account-element > .element-img > image {
  width: 40px;
  height: 40px;
  margin-top: 10px;
}

.my-account > .account-element > .element-text {
  height: 30px;
  line-height: 30px;
  text-align: center;
  font-size: 14px;
}
