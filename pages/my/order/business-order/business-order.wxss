/* pages/my/order/delivery-order/delivery-order.wxss */

page {
  background-color: #e6e6e6;
}

.is-null {
  width: 100%;
  text-align: center;
}

.is-null > image {
  width: 168px;
  height: 168px;
  margin-top: 50px;
}

.is-null > view {
  font-size: 16px;
  color: #cdcdcd;
}

.coupon-botton {
  width: 100%;
  height: 40px;
  line-height: 40px;
  text-align: center;
}

.coupon-botton > view {
  display: inline-table;
  margin-left: 5px;
  font-size: 14px;
  color: #cdcdcd;
}

.order-list {
  text-align: center;
}

.order-list > .order {
  display: inline-table;
  width: 90%;
  background-color: #fff;
  border-radius: 8px;
  margin-top: 20px;
  padding: 10px;
}

.order > .item {
  height: 30px;
  line-height: 30px;
  text-align: left;
}

.order > .item > view {
  display: inline-table;
  width: 50%;
  font-size: 14px;
}

.order > .item > .order-no {
  width: 70%;
}

.order > .item > .amount {
  width: 30%;
  font-size: 18px;
  color: #ff6347;
}

.order > .item > .region {
  float: left;
  width: 75%;
  height: 60px;
}

.order > .item > .region > .title {
  font-size: 14px;
}

.order > .item > .region > .address {
  font-size: 12px;
  line-height: normal;
}

.order > .item > .details {
  float: right;
  width: 25%;
  height: 60px;
  line-height: 60px;
  text-align: center;
}

.order > .item > .details > view {
  display: inline-table;
  width: 60px;
  height: 30px;
  line-height: 30px;
  font-size: 12px;
  color: #fff;
  border-radius: 5px;
  text-align: center;
}
