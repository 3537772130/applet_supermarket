/* pages/my/order/delivery-order/delivery-order.wxss */

.is-null {
  width: 100%;
  text-align: center;
}

.is-null > image {
  width: 168px;
  height: 168px;
  margin-top: 50px;
}

.is-null > view {
  font-size: 16px;
  color: #cdcdcd;
}

.coupon-botton {
  width: 100%;
  height: 40px;
  line-height: 40px;
  text-align: center;
}

.coupon-botton > view {
  display: inline-table;
  margin-left: 5px;
  font-size: 14px;
  color: #cdcdcd;
}

.order-list {
  text-align: center;
}

.order-list > .order {
  display: inline-table;
  width: 90%;
  background-color: #fff;
  border-radius: 8px;
  margin-top: 10px;
  padding: 10px;
  border: 1px #e6e6e6 solid;
  box-shadow: 0px 3px 6px #b2b2b2;
}

.order > .new {
  float: right;
  width: 40px;
  height: 40px;
  border-radius: 0px 8px 0px 0px;
  position: relative;
  top: -10px;
  right: -11px;
  z-index: 99;
}

.order > .item {
  width: 100%;
  font-size: 14px;
  text-align: left;
  border-bottom: 1px #e6e6e6 solid;
  margin-bottom: 5px;
}

.order > .item > .order-no {
  display: inline-table;
  width: 65%;
  font-size: 12px;
}

.order > .item > .status {
  display: inline-table;
  width: 20%;
  text-align: right;
}

.order > .left {
  float: left;
  width: 65%;
  font-size: 14px;
}

.order > .left > view {
  height: 25px;
  line-height: 25px;
  font-size: 12px;
  text-align: left;
}

.order > .left > .address {
  height: 30px;
  line-height: normal;
}

.order > .left > view > label {
  display: inline-table;
  margin-right: 10px;
}

.order > .right {
  float: left;
  width: 35%;
}

.order > .right > view {
  height: 40px;
  line-height: 40px;
  text-align: center;
}

.order > .right > .amount {
  font-size: 18px;
  color: red;
}

.order > .right > .load {
  display: inline-table;
  padding: 0px 10px;
  font-size: 12px;
  color: #fff;
  border-radius: 5px;
  height: 30px;
  line-height: 30px;
}

.order > .time {
  float: left;
  width: 100%;
  text-align: right;
  font-size: 12px;
  border-top: 1px #e6e6e6 solid;
  padding-top: 5px;
  margin-top: 5px;
}
