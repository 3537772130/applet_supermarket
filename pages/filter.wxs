/**页面工具 */
var filters = {
  // 保留两位小数
  toFix: function(val) {
    if (val) {
      return val.toFixed(2)
    }
    return 0.00
  },
  // 自定义小数位长度
  toFixCustom: function(val, length) {
    if (val) {
      return val.toFixed(length)
    }
    return 0.00
  },
  // 转化为数值
  toNumber: function(val) {
    return parseInt(val);
  },
  sub: function(val, sIndex, eIndex) {
    if (val && val != undefined && val.length != 0) {
      return val.substring(sIndex, eIndex);
    }
    return;
  },
  split: function(val, index) {
    if (val) {
      if (val != '') {
        var list = val.split(' ')
        return list[index]
      }
    }
    return ''
  }
}

module.exports = {
  toFix: filters.toFix,
  toFixCustom: filters.toFixCustom,
  toNumber: filters.toNumber,
  sub: filters.sub,
  split: filters.split
}